.content
  .row
    .col-lg-4.col-md-6.col-sm-6
      .card.card-stats
        .card-body
          .row
            .col-5.col-md-4
              .icon-big.text-center.icon-warning
                %i.nc-icon.nc-favourite-28.text-danger
            .col-7.col-md-8
              .numbers
                %p.card-category Next donation available
                %p= next_donation
        .card-footer
          %hr/
          .stats
            %i.fa.fa-calendar-o
            = "Last donation: #{last_donation}"
    .col-lg-4.col-md-6.col-sm-6
      .card.card-stats
        .card-body
          .row
            .col-5.col-md-4
              .icon-big.text-center.icon-warning
                %i.nc-icon.nc-book-bookmark.text-info
            .col-7.col-md-8
              .numbers
                %p.card-category Total donations
                %p.card-title
                  = @donations.size
                %p
        .card-footer
          %hr/
          .stats
            %i.fa.fa-heartbeat
            = donations_left_in_year
    .col-lg-4.col-md-6.col-sm-6
      .card.card-stats
        .card-body
          .row
            .col-5.col-md-4
              .icon-big.text-center.icon-warning
                %i.nc-icon.nc-zoom-split.text-danger
            .col-7.col-md-8
              .numbers
                %p.card-category Total blood donated
                %p.card-title
                  = "#{@donations.attended.size * 450} ml"
                %p
        .card-footer
          %hr/
          .stats
            %i.fa.fa-tint
            = "In #{Time.current.year}: #{@donations.attended.in_year(Time.current.year).size * 450} ml"
  .row
    .col-md-12
      .card
        .card-header
          %h5.card-title Users Behavior
          %p.card-category 24 Hours performance
        .card-body
          %canvas#chartHours{:height => "100", :width => "400"}
        .card-footer
          %hr/
          .stats
            %i.fa.fa-history
            Updated 3 minutes ago
  .row
    .col-md-4
      .card
        .card-header
          %h5.card-title Email Statistics
          %p.card-category Last Campaign Performance
        .card-body
          %canvas#chartEmail
        .card-footer
          .legend
            %i.fa.fa-circle.text-primary
            Opened
            %i.fa.fa-circle.text-warning
            Read
            %i.fa.fa-circle.text-danger
            Deleted
            %i.fa.fa-circle.text-gray
            Unopened
          %hr/
          .stats
            %i.fa.fa-calendar
            Number of emails sent
    .col-md-8
      .card.card-chart
        .card-header
          %h5.card-title NASDAQ: AAPL
          %p.card-category Line Chart with Points
        .card-body
          %canvas#speedChart{:height => "100", :width => "400"}
        .card-footer
          .chart-legend
            %i.fa.fa-circle.text-info
            Tesla Model S
            %i.fa.fa-circle.text-warning
            BMW 5 Series
          %hr/
          .card-stats
            %i.fa.fa-check
            Data information certified
