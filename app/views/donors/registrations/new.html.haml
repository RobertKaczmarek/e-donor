.wrapper
  .page-header{ style: "background-image: url(#{asset_pack_path('media/images/soroush-karimi.jpg')});"}
    .filter
    .container
      .row
        .col-lg-6.col-md-6.col-sm-7.col-12.ml-auto
          .info.info-horizontal
            .icon
              %i.fa.fa-umbrella
            .description
              %h3 We've got you covered
              %p Larger, yet dramatically thinner. More powerful, but remarkably power efficient. Everything you need in a single case.
          .info.info-horizontal
            .icon
              %i.fa.fa-map-signs
            .description
              %h3 Clear Directions
              %p Efficiently unleash cross-media information without cross-media value. Quickly maximize timely deliverables for real-time schemas.
          .info.info-horizontal
            .icon
              %i.fa.fa-user-secret
            .description
              %h3 We value your privacy
              %p Completely synergize resource taxing relationships via premier niche markets.
        .col-lg-6.col-md-6.col-sm-5.col-12.mr-auto
          .card.card-register
            %h3.card-title.text-center Register
            -#.social
              %button.btn.btn-just-icon.btn-facebook{:href => "#paper-kit"}
                %i.fa.fa-facebook
              %button.btn.btn-just-icon.btn-google{:href => "#paper-kit"}
                %i.fa.fa-google
              %button.btn.btn-just-icon.btn-twitter{:href => "#paper-kit"}
                %i.fa.fa-twitter
            .division
              -#.line.l
              -#%span or
              -#.line.r
            = simple_form_for resource, url: donor_registration_path(resource), class: 'register-form' do |f|
              = f.text_field :first_name, class: 'form-control', placeholder: 'First name'
              = f.text_field :last_name, class: 'form-control', placeholder: 'Last name'
              = f.email_field :email, class: 'form-control', placeholder: 'Email'
              = f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: 'new-password'
              = f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password confirmation', autocomplete: 'new-password'
              = f.submit 'Register', class: 'btn btn-block btn-round'
            .login
              %p
                Already have an account?
                = succeed '.' do
                  = link_to 'Log in', donor_session_path
              %p= link_to 'Forgot your password?', new_password_path(resource_name)

    = render 'layouts/donors/signup_footer'
